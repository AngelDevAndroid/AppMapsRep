<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_head_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informaciòn"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Conductor"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/tv_head_modal"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="profile"
        android:src="@drawable/ic_profile_menu"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_driver" />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ib_profile"
        app:layout_constraintStart_toStartOf="@+id/ib_profile"
        app:layout_constraintTop_toBottomOf="@+id/ib_profile" />

    <ImageButton
        android:id="@+id/ib_history"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="history"
        android:src="@drawable/ic_hist_menu"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/ib_close_sesion"
        app:layout_constraintStart_toEndOf="@+id/ib_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_driver" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="46dp"
        android:layout_height="14dp"
        android:text="Historial"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ib_history"
        app:layout_constraintStart_toStartOf="@+id/ib_history"
        app:layout_constraintTop_toBottomOf="@+id/ib_history" />

    <ImageButton
        android:id="@+id/ib_close_sesion"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="logout"
        android:src="@drawable/ic_logout_app"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_driver" />

    <TextView
        android:id="@+id/tv_close_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiòn"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ib_close_sesion"
        app:layout_constraintStart_toStartOf="@+id/ib_close_sesion"
        app:layout_constraintTop_toBottomOf="@+id/ib_close_sesion" />

</androidx.constraintlayout.widget.ConstraintLayout>